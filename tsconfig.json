{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"]
    },
    "include": [
      "./",
      "./**/*.ts",
      "./**/*.js",
      "src/**/*.json"
    ],
    "exclude": [
      "node_modules/",
      "build/",
      "dist/",
      ".cache/",
      ".tmp/",
      "src/admin/",
      "**/*.test.*",
      "src/plugins/**"
    ]
  }
  